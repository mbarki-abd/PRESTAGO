# =============================================================================
# PRESTAGO - Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=PRESTAGO
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:13000
APP_PORT=13000
APP_KEY=your-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=prestago
DB_USER=prestago
DB_PASSWORD=prestago_secret_password
DB_LOGGING=true

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# MinIO (S3 Compatible Storage)
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=prestago_access_key
MINIO_SECRET_KEY=prestago_secret_key
MINIO_BUCKET=prestago
MINIO_USE_SSL=false

# -----------------------------------------------------------------------------
# Meilisearch
# -----------------------------------------------------------------------------
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_API_KEY=prestago_meili_key

# -----------------------------------------------------------------------------
# NocoBase
# -----------------------------------------------------------------------------
NOCOBASE_DB_DIALECT=postgres
NOCOBASE_DB_HOST=${DB_HOST}
NOCOBASE_DB_PORT=${DB_PORT}
NOCOBASE_DB_DATABASE=${DB_DATABASE}
NOCOBASE_DB_USER=${DB_USER}
NOCOBASE_DB_PASSWORD=${DB_PASSWORD}
NOCOBASE_DB_LOGGING=${DB_LOGGING}

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# SSO - Azure AD
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=
AZURE_AD_REDIRECT_URI=${APP_URL}/api/auth/azure/callback

# SSO - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/api/auth/google/callback

# -----------------------------------------------------------------------------
# AI Providers
# -----------------------------------------------------------------------------
# Claude (Anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Default AI Provider (claude or openai)
AI_DEFAULT_PROVIDER=claude

# -----------------------------------------------------------------------------
# DocuSign
# -----------------------------------------------------------------------------
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_USER_ID=
DOCUSIGN_ACCOUNT_ID=
DOCUSIGN_PRIVATE_KEY_PATH=./keys/docusign-private.pem
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi
DOCUSIGN_OAUTH_BASE_URL=https://account-d.docusign.com

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=PRESTAGO
SMTP_FROM_EMAIL=noreply@prestago.io
SMTP_SECURE=false

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Multi-Tenant
# -----------------------------------------------------------------------------
TENANT_MODE=multi
DEFAULT_TENANT_SLUG=default

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
